header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All Tours
    .header__logo
        img(src="/img/logo-white.png", alt="Natours logo")
    nav.nav.nav--user
        if user
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`${user.name} Pic`)
                span= user.name.split(' ')[0]
            a.nav__el.nav__el--logout Log out 
        else
            a.nav__el(href="/login") Login
            a.nav__el.nav__el--cta(href="#") Sign Up